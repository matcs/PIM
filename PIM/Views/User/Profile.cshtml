
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

<div class="container">
    <div class="row">
        <partial name="_ProfilePartial" />
        <div class="col-md-9" style="margin:auto">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <h4>Perfil</h4>
                            <hr>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <form>
                                <div class="form-group row">
                                    <label for="userID" class="col-4 col-form-label">ID de usuário</label>
                                    <div class="col-8">
                                        <h5 id="userID">35464654654-68464-489</h5>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="status" class="col-4 col-form-label">Status de conta</label>
                                    <div class="col-8">
                                        <h5 id="status">Ativa</h5>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="name" class="col-4 col-form-label">Nome</label>
                                    <div class="col-8">
                                        <input id="FirstName" name="name" placeholder="Nome" class="form-control here" type="text" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="lastname" class="col-4 col-form-label">Sobrenome</label>
                                    <div class="col-8">
                                        <input id="LastName" name="lastname" placeholder="Sobrenome" class="form-control here" type="text" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="text" class="col-4 col-form-label">Nome social</label>
                                    <div class="col-8">
                                        <input id="SocialName" name="text" placeholder="Nome Social" class="form-control here" type="text" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="email" class="col-4 col-form-label">Email</label>
                                    <div class="col-8">
                                        <input id="Email" name="email" placeholder="Email" class="form-control here" type="text" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="publicinfo" class="col-4 col-form-label">Data de nascimento</label>
                                    <div class="col-8">
                                        <div class="input-group date">
                                            <input id="Birthday" type="date" name="birthday" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="offset-4 col-8">
                                        <button name="submit" type="button" onclick="updateUserData()" class="btn btn-primary">Atualizar meus dados</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/profile.js"></script>
