
@{
    ViewData["Title"] = "BuyCurrency";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>BuyCurrency</h1>
<hr />
<div class="container">
    <form>
        <div class="form-group">
            <label>Selecione a moeda desejada para compra</label>
            <select class="form-control col-md-4" name="Crypto Currency" id="cryptoCurrency">
                <option value="Bitcoin">Bitcoin</option>
                <option value="Ethereum">Ethereum</option>
                <option value="BasicAttentionToken">Basic Attention Token</option>
                <option value="Ripple">Ripple</option>
                <option value="Maker">Maker</option>
            </select>
        </div>
        <div class="form-group">
            <label>Selecione a moeda desejada para pagar</label>
            <select class="form-control col-md-4" name="currency" id="currency">
                <option>Real R$</option>
            </select>
        </div>
        <div class="form-group">
            <label>O quanto quer investir</label>
            <div class="input-group">
                <input type="text" id="amount" class="form-control col-md-4" placeholder="Quantidade desejada" value="100" min="100"/>
                <div class="input-group-append">
                    <button class="btn btn-outline-success" onclick="convertValue()" type="button">Converter</button>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label>Total da compra</label>
            <input class="form-control col-md-4" id="convertedValue" col-md-4" type="text" placeholder="Total" readonly>
        </div>
        <button class="btn btn-primary" onclick="buy()" type="button">Comprar</button>
    </form>
</div>

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/js/apiService.js"></script>
<script src="~/js/buyCurrency.js"></script>